@import '../variable'

/*
 * grid row
 *
 * per line in grid system
 * designate modifer can change row feature
 *
 * 1. old Android device not support flex-wrap
 *    it's here for anvance devices
 * 2. not supported in old syntax eidtion so old Android device is unavaliable
 * 3. old Android device will only reverse order of flex-items
 *
 */
$$Row($gutter = $defaultGutter)
  .row
    display flex
    flex-wrap nowrap  /* 1 */

  // with gutter
  .row--gutter
    margin-left $gutter * -1

    > .col
      padding-left $gutter

  // align main axis
  .row--left
    justify-content flex-start

  .row--right
    justify-content flex-end

  .row--center
    justify-content center

  .row--between
    justify-content space-between

  .row--around
    justify-content space-around  /* 2 */

  // align cross axis
  .row--top
    align-items flex-start

  .row--bottom
    align-items flex-end

  .row--middle
    align-items center

  .row--stretch
    align-items stretch

  .row--baseline
    align-items baseline

  // direction
  .row--reverse
    flex-direction row-reverse /* 3 */

  // division cells in same width
  .row--fit > .col
    flex auto