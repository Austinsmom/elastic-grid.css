/*
   grid column set
   
   define columns in grid row
   designate modifier can change column feature
   
   1. override flex basis
   2. align-self not supported in old syntax eidtion so old Android device is unavaliable
   
   $division number how many columns in one row
   ===================================================================== */
$$ColumnSet($division=$default_division)

  // $division is an integer greater than 0
  ensure($division, 'unit')
  error('$division is negative number') unless $division >= 1

  $elastic_css3Columns = ()
  $specifiedColumns = ()
  $division = floor($division)

  .col
    flex 1
    order 2
    box-sizing border-box

  // specific order
  .col--first
    order 1
  .col--last
    order 3

  // align column according to corss axis /* 2 */
  .col--top
    align-self flex-start

  .col--bottom
    align-self flex-end

  .col--middle
    align-self center

  .col--stretch
    align-self stretch

  .col--baseline
    align-self baseline

  /* init column width and gap
     ======================================================================= */

  // column without aliquot name
  for $level in 1..$division
    for $column in 1..$level
      $gap = unit(100 / $level, '%')

      // filter aliquots column: 1-1, 1-2, 1-3, 1-4, 1-5 ...
      // if $level % $column isnt 0 and $column isnt 1
      $$Column($column, $level, $$fixed($gap * $column, 4))

  // column with aliquot name
  for $column in $aliquots
    $level = $column[0]
    $name = $column[1]
    $gap = $$fixed(unit(100 / $level, '%'), 4)

    // set column width and gap
    $$Column($name, $level, $gap)

  /* constraint specified column width
     ======================================================================= */

  // columns with aliquot name
  for $column in $aliquots
    $aliquotName = $column[1]

    push($elastic_css3Columns, s('.col--%s', $aliquotName))
    push($specifiedColumns, s('.col--%s', $aliquotName))

  // columns with numeric name
  for $level in 1..$division
    for $column in 1..$level

      // if $level is 1 or $level isnt $column
      push($specifiedColumns, s('.col--%sof%s', $column, $level))

  // with css3 selector
  for $level in 1...$division
    push($elastic_css3Columns, s('.col[class*="col--%s"]', $level))

  if $elastic_css3
    {join(',', $elastic_css3Columns)}
      flex none
  else
    {join(',', $specifiedColumns)}
      flex none